<Window x:Class="Client.ConnectionProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="互联协商" 
        Height="350" Width="460"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        FontFamily="Segoe UI, Microsoft YaHei">

    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FAFBFC" Offset="0"/>
                <GradientStop Color="#F5F7FA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="20" Margin="16" BorderBrush="#E8E8E8" BorderThickness="1">
            <Grid Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="20,20,0,0" BorderBrush="#E8E8E8" BorderThickness="0,0,0,1">
                    <Grid Height="56" Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="互联协商" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,10,0,0">
                            <Button Style="{StaticResource TitleBarButtonStyle}" 
                                    Content="&#xE949;" FontFamily="Segoe MDL2 Assets" FontSize="12"
                                    Click="MinimizeButton_Click" ToolTip="最小化"/>
                            <Button Style="{StaticResource TitleBarButtonStyle}" 
                                    Content="&#xE106;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                    Click="CloseButton_Click" ToolTip="关闭"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Margin="28,28,28,24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="10" Padding="14,9" Margin="0,0,16,0">
                            <TextBlock Text="对方ID" FontSize="15" FontWeight="Medium" Foreground="#1976D2" VerticalAlignment="Center"/>
                        </Border>

                        <TextBox x:Name="TargetIdTextBox"
                                 Grid.Column="1"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Width="180"
                                 FontSize="15"
                                 VerticalContentAlignment="Center"
                                 ToolTip="输入对方的6位数字ID"/>

                        <Button x:Name="StartButton"
                                Grid.Column="2"
                                Style="{StaticResource ModernButtonStyle}"
                                Content="开始互联" 
                                Padding="20,0"
                                Margin="16,0,0,0"
                                Height="40"
                                Click="StartButton_Click"
                                ToolTip="开始发起互联请求"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="正在建立连接..." FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,18" HorizontalAlignment="Center"/>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ProgressBar x:Name="ProgressBar" 
                                         Grid.Row="0" 
                                         Height="14" 
                                         Margin="0,0,0,16"
                                         Foreground="#0078D4"
                                         Background="#E0E0E0"
                                         BorderThickness="0"/>

                            <TextBlock x:Name="StatusText" 
                                       Grid.Row="1" 
                                       Text="准备就绪" 
                                       FontSize="16" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="12,0,12,0"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>