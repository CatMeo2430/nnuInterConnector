<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:controls="clr-namespace:Client.Controls"
        mc:Ignorable="d"
        Title="NNU InterConnector" Height="650" Width="900"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="IP: " FontSize="14" FontWeight="Medium" Foreground="#555555" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Border Background="#E3F2FD" CornerRadius="6" Padding="0">
                        <Button Content="{Binding MyIp}" 
                                Command="{Binding CopyIpCommand}" 
                                FontSize="15" 
                                FontWeight="SemiBold"
                                Foreground="#1565C0"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10,6"
                                ToolTip="点击复制IP地址">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#BBDEFB"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                    
                    <TextBlock Text="ID: " FontSize="14" FontWeight="Medium" Foreground="#555555" VerticalAlignment="Center" Margin="20,0,8,0"/>
                    <Border Background="#E8F5E9" CornerRadius="6" Padding="0">
                        <Button Content="{Binding MyId}" 
                                Command="{Binding CopyIdCommand}" 
                                FontSize="16" 
                                FontWeight="Bold"
                                Foreground="#2E7D32"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="10,6"
                                ToolTip="点击复制ID">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C8E6C9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding InitiateConnectionCommand}" 
                            Style="{StaticResource ModernButtonStyle}"
                            Height="40" 
                            Padding="20,0"
                            ToolTip="发起新的互联请求">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="发起互联" FontSize="15" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <controls:ThreeStateToggle x:Name="ConnectionModeToggle"
                                               Width="360" 
                                               Height="44"
                                               Margin="20,0,0,0"
                                               CurrentState="{Binding ConnectionMode, Mode=TwoWay}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="已建立的连接" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" MinWidth="70"/>
                        <ColumnDefinition Width="1.0*" MinWidth="110"/>
                        <ColumnDefinition Width="*" MinWidth="80"/>
                        <ColumnDefinition Width="1.2*" MinWidth="120"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="4,0,0,4" BorderBrush="#E0E0E0" BorderThickness="1,1,0,1" Padding="8,8">
                        <TextBlock Text="ID" FontSize="13" FontWeight="Bold" Foreground="#555555" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,1" Padding="8,8">
                        <TextBlock Text="IP" FontSize="13" FontWeight="Bold" Foreground="#555555" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,1" Padding="8,8">
                        <TextBlock Text="状态" FontSize="13" FontWeight="Bold" Foreground="#555555" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="3" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,1" Padding="8,8">
                        <TextBlock Text="建立时间" FontSize="13" FontWeight="Bold" Foreground="#555555" HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="4" Background="#F5F5F5" CornerRadius="0,4,4,0" BorderBrush="#E0E0E0" BorderThickness="0,1,1,1" Padding="8,8">
                        <TextBlock Text="操作" FontSize="13" FontWeight="Bold" Foreground="#555555" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Connections}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FAFBFC" CornerRadius="6" Margin="0,0,0,8" BorderBrush="#E8E8E8" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.6*" MinWidth="70"/>
                                            <ColumnDefinition Width="1.0*" MinWidth="110"/>
                                            <ColumnDefinition Width="*" MinWidth="80"/>
                                            <ColumnDefinition Width="1.2*" MinWidth="120"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <Button Grid.Column="0" 
                                                Command="{Binding DataContext.CopyPeerIdCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding PeerId}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,10"
                                                HorizontalContentAlignment="Center"
                                                ToolTip="点击复制ID">
                                            <Button.Content>
                                                <TextBlock Text="{Binding PeerId}" FontSize="14" FontWeight="SemiBold" Foreground="#1565C0"/>
                                            </Button.Content>
                                        </Button>

                                        <Button Grid.Column="1" 
                                                Command="{Binding DataContext.CopyPeerIpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding PeerIp}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,10"
                                                HorizontalContentAlignment="Center"
                                                ToolTip="点击复制IP">
                                            <Button.Content>
                                                <TextBlock Text="{Binding PeerIp}" FontSize="14" FontWeight="SemiBold" Foreground="#6A1B9A"/>
                                            </Button.Content>
                                        </Button>

                                        <Button Grid.Column="2" 
                                                Command="{Binding DataContext.CopyStatusCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding Status}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,10"
                                                HorizontalContentAlignment="Center"
                                                ToolTip="点击复制状态">
                                            <Button.Content>
                                                <TextBlock Text="{Binding Status}" FontSize="14" FontWeight="SemiBold" Foreground="#2E7D32"/>
                                            </Button.Content>
                                        </Button>

                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.CopyTimeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding ConnectedTime}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="8,10"
                                                HorizontalContentAlignment="Center"
                                                ToolTip="点击复制时间">
                                            <Button.Content>
                                                <TextBlock Text="{Binding ConnectedTime, StringFormat='{}{0:MM-dd HH:mm:ss}'}" FontSize="14" FontWeight="SemiBold" Foreground="#EF6C00"/>
                                            </Button.Content>
                                        </Button>

                                        <Button Grid.Column="4" 
                                                Command="{Binding DataContext.DisconnectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="#E74C3C"
                                                Foreground="White"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Padding="20,10"
                                                Margin="0"
                                                BorderThickness="0"
                                                ToolTip="断开此连接">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="0,6,6,0"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#C0392B"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            断开
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="运行日志" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding LogText}" 
                               FontFamily="Consolas" 
                               FontSize="12" 
                               Foreground="#666666" 
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
